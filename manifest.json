{
  "manifest_version": 3,
  "name": "Custom Area Screenshot",
  "version": "1.0",
  "description": "Select an area on the page, show it in popup and download.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Custom Screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "capture_visible_area_Q": {
        "suggested_key": {
            "default": "Ctrl+Shift+Q"
        },
        "description": "capture full tab and download with D"
    },
    "capture_visible_area_X": {
        "suggested_key": {
            "default": "Ctrl+Shift+X"
        },
        "description": "capture full tab and download with Q"
    }
  }
}
